<h1>Catalog</h1>

<table class="catalog">
<% for item in @items %>
  <tr>
    <td>
        <div class="title">
            <%= link_to item.title, item %>
        </div>
        <div class="description">
            <%=h item.description %>
        </div>
        <div class="links">
            <%= link_to 'Edit', edit_item_path(item) %> |
            <%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %>
<%= button_to "Add to Cart", :controller => :cart, :action => :add, :method => :post, :id => item.id %>
        </div>
        <div class="price">
            <%= number_to_currency(item.price, :unit => "&pound;") %>
        </div>
    </td>
  </tr>
<% end %>
</table>

<p><%= link_to 'New item', new_item_path %></p>
